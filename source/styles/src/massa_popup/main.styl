
.container
	width: 100vw;
	height: 100vh;
	background-color: #524949;

.cardWrap
	perspective: 1000px;
	width: 600px;
	height: 300px;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
	// position: relative;
	position: fixed;
	.card
		
		width: 100%;
		height: 100%;
		margin: 0 auto;
		transition: transform 0.6s;
		transform-style: preserve-3d;
		font-size: 100%;
		box-shadow: 2px 5px 10px 8px #891f1f;
		&__front,&__back
			position: absolute;
			width: 100%;
			height: 100%;
			backface-visibility: hidden;
			background-color: #6d3f1d;
			color: #dea4a4;
		&__front
			text-align: center;
			z-index: 2;
			font-size: 100%;
			h2
				color: #53f370;
				font-size: 80%;
			span
				font-size: 85%;
			h1
				display: inline-block;
				font-size: 90%;	
				color: #09d0b7;
				animation: color 10s ease infinite;
				background-color: #af6746;
				transition: all 2s;
				&:hover
					cursor: pointer;
					margin-left: 10px;
					margin-top: 10px;
					
		&__back
			transform: rotateY(180deg);
			z-index: 1;
			position: relative;
			a
				width: 100%
				height: 100%
				background-color: red;
				display: block
				font-size: 40px;
				text-decoration: none;
				z-index: 2
	.hoverText
		position: absolute;
		left: -50vw;
		top: 0;
		bottom 0px;
		right 0px;
		// display: none;
		// opacity: 0;
		z-index: 1;
		width: 100px;
		height: 80px;
		border-radius: 3px;
		box-shadow: inset 0 0 3px 5px #094f07;
		text-align: center
		padding 3px;
		transition: all 1s;
		background-color: green;

@keyframes hoverText
	0%
		transform: rotateX(90deg)
	50%
		transform: rotateX(90deg)
		
		opacity: 0.5;
	100%
		opacity: 1;
		transform: translateX(105%)  rotateX(0deg)
.cardWrapHide
	animation: scaleHide 2.5s ease forwards
	transition all 1s ease;
	// &:hover .hoverText
	// 	display: block
	// 	transform-origin: top center;
	// 	box-shadow 0px 0px 3px 2px #964949
	// 	animation: hoverText 1s ease forwards
	&:hover 
		transform: translateX(80%);
		.hoverText
			left: calc(0px - 80%) ;
		

.cardHide
	animation: rotHide 2.5s ease forwards

.cardWrapShow
	animation: scaleShow 2.5s ease forwards
.cardShow
	animation: rotShow 2.5s ease forwards

@keyframes rotHide
	0%
		transform: rotateY(0deg);
	50%
		transform: scale(.8) rotateY(90deg);
	100%
		transform: scale(1) rotateY(180deg);

@keyframes scaleHide
 		
	0%
		right: 0;
	50%
		right: 80%;
	100%
		width: 150px;
		height: 80px;
		right: 100%;
		left: 0%;
		
@keyframes rotShow
	0%
		transform: rotateY(180deg);
	// 50%
	// 	transform: scale(1.3) rotateY(90deg);
	100%
		transform: scale(1) rotateY(0deg);
@keyframes scaleShow
	0%
		width: 150px;
		height: 80px;
		right: 100%;
	50%
		right: 20%;
	100%
		right: 0;
		


@keyframes color
	0%
		color: #c16161;
		box-shadow: 0 0 10px 5px #482222
	10%
		color: #c11f1f;
		box-shadow: 0 0 5px 5px #631212
	20%
		color: #d40000;
		box-shadow: 0 0 10px 5px #6d0808
	30%
		color: #d47900;
		box-shadow: 0 0 5px 5px #9c6823
	40%
		color: #d4c700;
		box-shadow: 0 0 10px 5px #807800
	50%
		color: #4ed400;
		box-shadow: 0 0 5px 5px #215602
	60%
		color: #3b8610;
		box-shadow: 0 0 10px 5px #1f400d
	70%
		color: #103286;
		box-shadow: 0 0 5px 5px #0a225d
	80%
		color: #9d4dff;
		box-shadow: 0 0 10px 5px #5f2d9c
	90%
		color: #ff4d94;
		box-shadow: 0 0 5px 5px #8a234c
	100%
		color: #ff4040;
		box-shadow: 0 0 10px 5px #a02020