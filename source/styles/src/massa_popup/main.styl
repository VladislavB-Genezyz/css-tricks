
.container
	width: 100vw;
	height: 100vh;
	background-color: #bababa;

.cardWrap
	perspective: 1000px;
	width: 600px;
	height: 300px;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
	// position: relative;
	position: fixed;
	.card
		
		width: 100%;
		height: 100%;
		margin: 0 auto;
		transition: transform 0.6s;
		transform-style: preserve-3d;
		font-size: 100%;
		box-shadow: 2px 5px 10px 8px #891f1f;
		&__front,&__back
			position: absolute;
			width: 100%;
			height: 100%;
			backface-visibility: hidden;
		&__front
			text-align: center;
			z-index: 2;
			border: 1px double red;
			font-size: 100%;
			h2
				color: #749b7b;
				font-size: 80%;
			span
				font-size: 85%;
			h1
				font-size: 90%;		
		&__back
			transform: rotateY(180deg);
			z-index: 1;
			border: 2px double green;
			a
				width: 100%
				height: 100%
				background-color: red;
				display: block
	
.cardWrapHide
	animation: scaleHide 2.5s ease forwards
.cardHide
	animation: rotHide 2.5s ease forwards

.cardWrapShow
	animation: scaleShow 2.5s ease forwards
.cardShow
	animation: rotShow 2.5s ease forwards

@keyframes rotHide
	0%
		transform: rotateY(0deg);
	50%
		transform: scale(.8) rotateY(90deg);
	100%
		transform: scale(.6) rotateY(180deg);

@keyframes scaleHide
 		
	0%
		right: 0;
	50%
		right: 80%;
	100%
		width: 150px;
		height: 80px;
		right: 100%;
		
@keyframes rotShow
	0%
		transform: rotateY(180deg);
	// 50%
	// 	transform: scale(1.3) rotateY(90deg);
	100%
		transform: scale(1.6) rotateY(0deg);
@keyframes scaleShow
	0%
		width: 150px;
		height: 80px;
		right: 100%;
	50%
		right: 20%;
	100%
		right: 0;