body,html
	padding: 0;
	margin: 0;
	// direction: rtl;
body::-webkit-scrollbar 
	width: 1em;


body::-webkit-scrollbar-track 
	-webkit-box-shadow:  -10px 0 6px rgba(0,0,0,0.3);
	background: #d8b1b1;
	


body::-webkit-scrollbar-thumb 
	border-radius: 10px;
	outline: 1px solid slategrey;
	box-shadow: inset 0 0 10px 5px #c97070;
	background: linear-gradient(orangered, gold);
	border: 2px solid black;
	content: '22'
	
body::-scrollbar-button
	border-radius: 5px;

	
@import '/src/main.styl'